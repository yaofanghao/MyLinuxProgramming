ls /
cp /etc/vim/vimrc ~/.vimrc  # 修改家目录下的vim配置文件
vim ~/.vimrc

# 部分配置方案，在vimrc中可选择输入以下内容
syntax on  # 语法高亮
set completeopt=preview,menu  # 代码补全
set nobackup #覆盖文件时不备份
set autowrite # 自动保存
set tabstop=4 # 设置tab长度
set noexpandtab  # 不要用空格代替制表符
set number # 设置行号

# Ctrl+P  自动补全

# PowerVim 配置库
git clone https://github.com/youngyangyang04/PowerVim.git
cd PowerVim
sh install.sh

